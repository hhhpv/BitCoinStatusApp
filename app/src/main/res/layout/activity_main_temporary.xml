<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black">
    <TextView android:layout_width="match_parent" android:textColor="@color/colorPrimaryDark" android:fontFamily="serif-monospace" android:id="@+id/welcome" android:layout_height="wrap_content" android:text="Welcome to I Love Zappos." android:textAlignment="center" android:layout_gravity="center" android:layout_marginTop="125dp" android:textSize="30dp"/>
    <TextView android:layout_width="match_parent" android:textColor="@color/colorPrimaryDark" android:fontFamily="serif-monospace" android:id="@+id/loading" android:layout_height="wrap_content" android:text="Fetching Data." android:textAlignment="center"  android:layout_below="@+id/welcome" android:layout_marginTop="50dp" android:textSize="25dp"/>
    <TextView android:layout_width="match_parent" android:textColor="@color/colorPrimaryDark" android:fontFamily="serif-monospace" android:layout_height="wrap_content" android:text="Make Sure You are Connected To the Internet" android:textAlignment="center" android:layout_gravity="center" android:layout_alignParentBottom="true" android:textSize="15dp"/>

</RelativeLayout>